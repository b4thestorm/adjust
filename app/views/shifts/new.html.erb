<h1 class="text-center"> Add A Shift</h1>
<div class=" well">
<%= form_for [@employee, @shift] do |f|%>
  <div class="field">
    <%=f.label :Date, class: "text-center"%>:
    <%=f.date_select :shift_day%>
  </div>
  <div class="field ">
    <%= f.label 'Start time'%>:
    <%= f.time_select :start, {:ampm => true}%>
  </div>
  <div class="field">
    <%= f.label 'End time'%>: 
    <%= f.time_select :end , {:ampm => true}%>
  </div>
  <div class="field ">
    <%= f.label 'Position', class: "text-center"%>: 
    <%= f.text_field :position, placeholder: "eg: 2nd Flr Stock "%>
  </div>
</br>
  <div class="actions">
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
      <i class="glyphicon glyphicon-send"> Send</i>
    <%end%>
  </div>
<% end %>
</div>

