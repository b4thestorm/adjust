 <li>Hello, <%=link_to current_employee.f_name, employee_path(current_employee.id)%></li>
 <%else%>
 <li><%=link_to 'Register', register_path%></li>
 <li><%=link_to 'Login', login_path%></li>
<%end%>
</ul>

<%= yield %>

</body>
</html>
