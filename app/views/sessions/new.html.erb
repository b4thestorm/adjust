<div class="row piece-meal">
<div class="login col-lg-6  well text-center">
  <h1> Log In</h1>
      </br>
  <%= form_tag '/login' do %>
  <div class="control-group">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div></br>
  <div class="control-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
      </br>
      </br>
    <%= submit_tag :login , class: "btn btn-primary"%>
  <%end%>
</div>
</br>
<div class="copytag col-xs-12 col-lg-12">
  <p class="text-center">Don't have an account? Schedule a <%=link_to "demo", register_path%>!</p>
</div>
</div>


