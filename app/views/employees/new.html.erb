<div class='container'>
<h1>Register</h1>
</hr>

<form class='form-horizontal col-md-6'>
<%=form_for @employee do |f| %>
<%if @employee.errors.any?%>
<div>
	<h3><%=pluralize(@employee.errors.count,' errors')%> 
	Prohibited the Form from being sent:</h3>
	<ul>
		<%@employee.errors.full_messages.each do |message|%>
		<li><%= message%></li>
		<%end%>
	</ul>
	<%end%>
</div>
<div class='well well-sm col-md-6' >
<div class='form-group'>
<%=f.label :username %>
<%=f.text_field :username %>
</div>
<div class='form-group'>
<%=f.label :FirstName%>
<%=f.text_field :f_name%>
</div>
<div class='form-group'>
<%=f.label :Lastname%>
<%=f.text_field :l_name%>
</div>
<div class='form-group'>
<%=f.label :email%>
<%=f.text_field :email%>
</div>
<div class='form-group'>
<%=f.label :password%>
<%=f.password_field :password%>
</div>
<%=f.submit ('Register')%>
<%end%>
</div>
</form>
</div>
