<div class='container'>
<h1>Register</h1>
</hr>


<!-- Register Form  -->
</br> 
<% if @employee.errors.any?%>
<div>
<h3><%=pluralize(@employee.errors.count,' errors')%> 
Prohibited the Form from being sent:</h3>
<ul>
<% @employee.errors.full_messages.each do |message|%>
<li><%= message%></li>
<% end %>
</ul>
<% end%>
</div>
<%=form_for(@employee, url: employees_path) do |f| %>
<div class='well well-sm col-md-6' >
<div class='form-group'>
<%=f.label :username %>
<%=f.text_field :username %>
</div>
<div class='form-group'>
<%=f.label :FirstName%>
<%=f.text_field :f_name%>
</div>
<div class='form-group'>
<%=f.label :Lastname%>
<%=f.text_field :l_name%>
</div>
<div class='form-group'>
<%=f.label :email%>
<%=f.text_field :email%>
</div>
<div class='form-group'>
<%=f.label :password%>
<%=f.password_field :password%>
</div>
<div class='form-group'>
<%=f.label 'Authorize Code'%>
<%=f.text_field :authcode%>
</div>
<%=f.submit ('Register')%>
<% end %>
</div>
</div>
